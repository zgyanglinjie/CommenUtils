<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jh.commenutils" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver android:name="utils.MyBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ReflectionActivity1"
            android:label="@string/title_activity_reflection_activity1" >
        </activity>
        <activity
            android:name=".ReflectionMainActivity2"
            android:label="@string/title_activity_reflection_main_activity2" >
        </activity>
        <activity
            android:name=".GravityActivity"
            android:label="@string/title_activity_gravity" >
        </activity>
        <activity
            android:name=".CallBackActivity"
            android:label="@string/title_activity_call_back" >
        </activity>
        <activity
            android:name=".SpannableStringBuilderActivity"
            android:label="@string/title_activity_spannable_string_builder" >
        </activity>
        <activity
            android:name=".EncryptActivity"
            android:label="@string/title_activity_encrypt" >
        </activity>
        <activity
            android:name=".AsyncHttpMainActivity"
            android:label="@string/title_activity_async_http_main" >
        </activity>
        <activity
            android:name=".ImageLoaderActivity"
            android:label="@string/title_activity_image_loader" >
        </activity>
        <activity
            android:name=".CustomViewActivity"
            android:label="@string/title_activity_custom_view" >
        </activity>
        <activity
            android:name=".EditTextClearActivity"
            android:label="@string/title_activity_edit_text_clear" >
        </activity>
        <activity
            android:name=".CountDownTimerActivity"
            android:label="@string/title_activity_count_down_timer" >
        </activity>
        <activity
            android:name=".AnmtionActivity"
            android:label="@string/title_activity_anmtion" >

        </activity>
        <activity
            android:name=".PicassoActivity"
            android:label="@string/title_activity_picasso" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
